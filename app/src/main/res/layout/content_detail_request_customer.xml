<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="uci.develops.wiraenergimobile.activity.DetailRequestCustomerActivity"
    tools:showIn="@layout/activity_detail_request_customer"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:weightSum="6"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:text="Nama Customer"
                android:layout_width="0dp"/>
            <TextView
                android:layout_weight="4"
                android:layout_height="wrap_content"
                android:id="@+id/txtIdCustomer"
                android:text="Nama Customer"
                android:layout_width="0dp"/>
        </LinearLayout>
        <LinearLayout
            android:weightSum="6"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:text="Decode"
                android:layout_width="0dp"/>
            <TextView
                android:layout_weight="4"
                android:layout_height="wrap_content"
                android:id="@+id/txtDecode"
                android:text="Nama Customer"
                android:layout_width="0dp"/>
        </LinearLayout>
        <LinearLayout
            android:weightSum="6"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:text="Email"
                android:layout_width="0dp"/>
            <TextView
                android:layout_weight="4"
                android:layout_height="wrap_content"
                android:id="@+id/txtEmail"
                android:text="Nama Customer"
                android:layout_width="0dp"/>
        </LinearLayout>
        <TextView
            android:id="@+id/txtStatus"
            android:gravity="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:textAllCaps="false"
                android:text="Approve"
                android:id="@+id/buttonApprove"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <Button
                android:textAllCaps="false"
                android:text="Reject"
                android:id="@+id/buttonReject"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
