                            <TextView
                                android:layout_weight="2"
                                android:layout_height="wrap_content"
                                android:text="@string/positions"
                                android:layout_width="0dp"/>
                            <TextView
                                android:layout_weight="4"
                                android:layout_height="wrap_content"
                                android:id="@+id/textView_position2"
                                android:text="Position"
                                android:layout_width="0dp"/>
                        </LinearLayout>
                        <LinearLayout
