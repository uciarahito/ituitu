<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycle_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"></android.support.v7.widget.RecyclerView>
    </LinearLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="@android:color/white"
        app:cardElevation="2dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:weightSum="6">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:gravity="center_vertical"
                    android:text="Bruto         :"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/editText_bruto"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4.5"
                    android:background="@drawable/edit_text_background"
                    android:gravity="left|center"
                    android:hint="@string/bruto"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:textColorHint="@color/colorGray" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:weightSum="6">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:gravity="left|center"
                    android:text="Disc.(%)    :"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/editText_disc1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:layout_weight="2"
                    android:background="@drawable/rounded_rectangle_gray"
                    android:hint="@string/discount"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:textColorHint="@color/colorGray"
                    app:layout_gravity="center_vertical" />

                <EditText
                    android:id="@+id/editText_disc2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.5"
                    android:background="@drawable/rounded_rectangle_gray"
                    android:hint="@string/discount"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:textColorHint="@color/colorGray"
                    app:layout_gravity="center_vertical" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:weightSum="6">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:gravity="left|center"
                    android:text="Other Cost:"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/editText_other_cost"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4.5"
                    android:background="@drawable/edit_text_background"
                    android:hint="@string/other_cost"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:textColorHint="@color/colorGray"
                    app:layout_gravity="center_vertical" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:weightSum="6">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:gravity="left|center"
                    android:text="Netto:"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/editText_netto"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4.5"
                    android:background="@drawable/edit_text_background"
                    android:hint="@string/netto"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:textColorHint="@color/colorGray"
                    app:layout_gravity="center_vertical" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:weightSum="6">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:gravity="left|center"
                    android:text="Customer Note:"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView_customer_note"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4.5"
                    android:gravity="left|center"
                    android:text="Customer Note" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:weightSum="6">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:gravity="left|center"
                    android:text="Terbilang:"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView_terbilang"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4.5"
                    android:gravity="left|center"
                    android:text="Terbilang..." />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:weightSum="6">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:gravity="left|center"
                    android:text="Admin Note:"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/editText_admin_note"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="4.5"
                    android:background="@drawable/rounded_rectangle_gray"
                    android:hint="@string/address"
                    android:imeOptions="actionNext"
                    android:inputType="textCapWords|textPostalAddress"
                    android:textColorHint="@color/colorGray"
                    app:layout_gravity="center_vertical" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
