<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:background="@drawable/rounded_rectangle_new">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:weightSum="6">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.75"
                android:src="@drawable/ic_home_black_24dp"
                android:layout_gravity="center" />

            <Spinner
                android:id="@+id/spinner_shipping_address_name"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="5"
                android:layout_gravity="left|center"
                tools:listitem="@android:layout/simple_spinner_dropdown_item" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:weightSum="6">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.75"
                android:src="@drawable/ic_home_black_24dp"
                android:layout_gravity="center" />

            <EditText
                android:id="@+id/editText_shipping_address"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:hint="@string/address"
                android:imeOptions="actionNext"
                android:inputType="textCapWords|textPostalAddress"
                android:textColorHint="@color/colorGray"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:weightSum="6">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.75"
                android:src="@drawable/ic_person_24dp"
                android:layout_gravity="center" />

            <EditText
                android:id="@+id/editText_shipping_PIC"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:hint="@string/pic_name"
                android:imeOptions="actionNext"
                android:inputType="textCapWords|textPostalAddress"
                android:textColorHint="@color/colorGray" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:weightSum="6">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.75"
                android:src="@drawable/ic_phone_24dp"
                android:layout_gravity="center" />

            <EditText
                android:id="@+id/editText_shipping_phone"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:hint="@string/phone"
                android:imeOptions="actionNext"
                android:inputType="phone"
                android:textColorHint="@color/colorGray"
                app:layout_gravity="center_vertical" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:weightSum="6">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.75"
                android:src="@drawable/ic_mobile_24dp"
                android:layout_gravity="center" />

            <EditText
                android:id="@+id/editText_shipping_mobile"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:hint="@string/mobile"
                android:imeOptions="actionNext"
                android:inputType="phone"
                android:textColorHint="@color/colorGray"
                app:layout_gravity="center_vertical" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>