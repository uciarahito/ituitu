            android:textStyle="bold"
            android:layout_marginRight="10dp"
            android:gravity="end"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:weightSum="7"
            android:layout_weight="4"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
