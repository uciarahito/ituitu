<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorBackground"
    tools:context="uci.develops.wiraenergimobile.activity.RequestQuotationActivity"
    tools:showIn="@layout/activity_request_quotation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:src="@drawable/sales_quotation" />

        <TextView
            android:id="@+id/textView_label_new_customer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center_horizontal"
            android:text="Sales Quotation"
            android:textAllCaps="true"
            android:textAppearance="@style/TextAppearance.AppTheme.Title"
            android:textColor="@color/primary_text"
            android:textStyle="bold" />

        <include layout="@layout/shipping_address" />

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@drawable/drop_shadow" />

        <TextView
            android:id="@+id/textView_customer_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="Customer Code"
            android:textStyle="bold"
            app:layout_gravity="fill_horizontal" />

        <TextView
            android:id="@+id/textView_customer_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="Customer Group"
            android:textStyle="bold"
            app:layout_gravity="fill_horizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Billing Payments"
                app:layout_gravity="fill_horizontal"
                android:textAppearance="@style/TextAppearance.AppTheme.Title"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2">

                <Button
                    android:id="@+id/button_company_address"
                    android:layout_width="0dp"
                    android:layout_marginRight="2dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:background="@color/GreenColor"
                    android:text="Company Address"
                    android:textAllCaps="false"
                    android:textAppearance="@style/TextAppearance.AppTheme.Small"
                    android:textColor="@color/White" />

                <Button
                    android:id="@+id/button_shipping_address"
                    android:layout_width="0dp"
                    android:layout_marginLeft="2dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:background="@color/GreenColor"
                    android:text="Shipping Address"
                    android:textAllCaps="false"
                    android:textAppearance="@style/TextAppearance.AppTheme.Small"
                    android:textColor="@color/White" />
            </LinearLayout>

        </LinearLayout>

        <android.support.v7.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@color/white"
            app:columnCount="2">

            <ImageView
                android:padding="12dp"
                android:src="@drawable/ic_person_24dp" />

            <Spinner
                android:id="@+id/spinner_shipping_name"
                android:layout_width="0dp"
                app:layout_columnWeight="1"
                app:layout_gravity="center_vertical"
                tools:listitem="@android:layout/simple_spinner_dropdown_item" />

            <ImageView
                android:padding="12dp"
                android:src="@drawable/ic_phone_24dp" />

            <net.rimoto.intlphoneinput.IntlPhoneInput
                android:id="@+id/shipping_phone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:imeOptions="actionNext"
                app:layout_columnWeight="1" />

            <ImageView
                android:padding="12dp"
                android:src="@drawable/ic_mobile_24dp" />

            <net.rimoto.intlphoneinput.IntlPhoneInput
                android:id="@+id/shipping_mobile"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:imeOptions="actionNext"
                app:layout_columnWeight="1" />

            <ImageView
                android:padding="12dp"
                android:src="@drawable/ic_email_24dp" />

            <EditText
                android:id="@+id/shipping_email"
                android:layout_width="0dp"
                android:background="@drawable/edit_text_background"
                android:hint="@string/email"
                android:imeOptions="actionNext"
                android:inputType="textEmailAddress"
                android:textColorHint="@color/colorGray"
                app:layout_columnWeight="1"
                app:layout_gravity="center_vertical" />

            <ImageView
                android:padding="12dp"
                android:src="@drawable/ic_position_24dp" />

            <EditText
                android:id="@+id/shipping_position"
                android:layout_width="0dp"
                android:background="@drawable/edit_text_background"
                android:hint="@string/position"
                android:imeOptions="actionNext"
                android:inputType="textCapWords|textPersonName"
                android:textColorHint="@color/colorGray"
                app:layout_columnWeight="1"
                app:layout_gravity="center_vertical" />

            <ImageView
                android:padding="12dp"
                android:src="@drawable/ic_event_black_24dp" />

            <EditText
                android:id="@+id/shipping_date"
                android:layout_width="0dp"
                android:background="@drawable/edit_text_background"
                android:hint="@string/date"
                android:textColorHint="@color/colorGray"
                app:layout_columnWeight="1"
                app:layout_gravity="center_vertical" />
        </android.support.v7.widget.GridLayout>

        <android.support.v7.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@color/white"
            app:columnCount="3">

            <TextView
                android:padding="8dp"
                android:text="@string/item"
                android:textStyle="bold"
                app:layout_columnWeight="1" />

            <TextView
                android:padding="8dp"
                android:text="@string/unit"
                android:textStyle="bold"
                app:layout_columnWeight="1" />

            <TextView
                android:padding="8dp"
                android:text="@string/qty"
                android:textStyle="bold"
                app:layout_columnWeight="1" />

            <Spinner
                android:id="@+id/spinner_item"
                android:layout_width="0dp"
                android:layout_marginRight="25dp"
                app:layout_columnWeight="1"
                app:layout_gravity="center_vertical"
                tools:listitem="@android:layout/simple_spinner_dropdown_item" />

            <Spinner
                android:id="@+id/spinner_unit"
                android:layout_width="0dp"
                android:layout_marginRight="25dp"
                app:layout_columnWeight="1"
                app:layout_gravity="center_vertical"
                tools:listitem="@android:layout/simple_spinner_dropdown_item" />

            <EditText
                android:id="@+id/quantity"
                android:layout_width="0dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="40dp"
                android:background="@drawable/rounded_rectangle_gray"
                android:hint="@string/qty"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:textColorHint="@color/colorGray"
                app:layout_columnWeight="1"
                app:layout_gravity="center_vertical" />

        </android.support.v7.widget.GridLayout>

        <android.support.v7.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@color/white"
            app:columnCount="2">

            <ImageView
                android:padding="12dp"
                android:src="@drawable/ic_border_color_black_24dp"
                app:layout_gravity="center" />

            <EditText
                android:id="@+id/notes"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:background="@drawable/rounded_rectangle_gray"
                android:hint="@string/note"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:textColorHint="@color/colorGray"
                app:layout_columnWeight="1" />
        </android.support.v7.widget.GridLayout>

        <android.support.v7.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@color/white"
            app:columnCount="3">

            <Button
                android:id="@+id/button_submit"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="@string/submit"
                app:layout_columnWeight="1" />

            <Button
                android:id="@+id/button_save"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="@string/save"
                app:layout_columnWeight="1" />

            <Button
                android:id="@+id/button_cancel"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="@string/cancel"
                app:layout_columnWeight="1" />
        </android.support.v7.widget.GridLayout>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
