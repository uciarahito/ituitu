<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="uci.develops.wiraenergimobile.activity.FormRequestSalesOrderActivity"
    tools:showIn="@layout/app_bar_form_request_sales_order">

    <android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?android:attr/colorBackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Customer Detail"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_rectangle_gray"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:weightSum="6">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"
                            android:text="SO No."
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/editText_so_number"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="4.25"
                            android:hint="@string/address"
                            android:imeOptions="actionNext"
                            android:inputType="textCapWords|textPersonName"
                            android:textColorHint="@color/colorGray" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:weightSum="6">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1.5"
                            android:text="Customer"
                            android:textStyle="bold" />

                        <Spinner
                            android:id="@+id/spinner_customer_name"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_gravity="left|center"
                            android:layout_weight="4.25"
                            tools:listitem="@android:layout/simple_spinner_dropdown_item" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:weightSum="6">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"
                            android:text="SO Date."
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/editText_so_date"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="4.25"
                            android:hint="SO Date"
                            android:imeOptions="actionNext"
                            android:textColorHint="@color/colorGray" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:weightSum="6">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1.5"
                            android:text="Payment Term."
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/editText_payment_term"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1.5"
                            android:hint="Payment"
                            android:inputType="number"
                            android:textColorHint="@color/colorGray" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:text="Days"
                            android:textSize="18dp" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/linear_layout_title1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="9"
                        android:text="Shipping Address"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/imageTitle1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@android:drawable/arrow_down_float" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear_layout_content1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone">

                    <LinearLayout
                        android:id="@+id/linear_layout_container_so_shipping_address"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone">

                        <fragment
                            android:id="@+id/fragment_so_shipping_address"
                            android:name="uci.develops.wiraenergimobile.fragment.FragmentSOShippingAddress"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            tools:layout="@layout/fragment_req_quotation_shipping_address" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="6dp"
                    android:background="@drawable/drop_shadow" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/linear_layout_title2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="9"
                        android:text="Payment Address"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/imageTitle2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@android:drawable/arrow_down_float" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear_layout_content2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone">

                    <LinearLayout
                        android:id="@+id/linear_layout_container_so_payment_address"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone">

                        <fragment
                            android:id="@+id/fragment_so_payment_address"
                            android:name="uci.develops.wiraenergimobile.fragment.FragmentSOPaymentAddress"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="6dp"
                    android:background="@drawable/drop_shadow" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Item Purchase Order"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_rectangle_gray"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="3">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="8dp"
                                android:text="@string/qty"
                                android:textStyle="bold" />

                            <EditText
                                android:id="@+id/editText_quantity"
                                android:layout_width="100dp"
                                android:layout_height="30dp"
                                android:layout_marginLeft="10dp"
                                android:background="@drawable/rounded_rectangle_gray"
                                android:inputType="numberDecimal"
                                app:layout_gravity="center_vertical" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="8dp"
                                android:text="@string/unit"
                                android:textStyle="bold" />

                            <Spinner
                                android:id="@+id/spinner_unit"
                                android:layout_width="100dp"
                                android:layout_height="30dp"
                                android:spinnerMode="dialog"
                                app:layout_gravity="center_vertical" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="8dp"
                                android:text="@string/item"
                                android:textStyle="bold" />

                            <Spinner
                                android:id="@+id/spinner_item"
                                android:layout_width="100dp"
                                android:layout_height="30dp"
                                android:spinnerMode="dialog"
                                app:layout_gravity="center_vertical" />
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="6dp"
                        android:background="@drawable/drop_shadow"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="5dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="6">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2.25"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="8dp"
                                android:text="Item Source"
                                android:textStyle="bold" />

                            <EditText
                                android:id="@+id/editText_item_source"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:layout_marginLeft="10dp"
                                android:background="@drawable/rounded_rectangle_gray"
                                android:inputType="numberDecimal"
                                app:layout_gravity="center_vertical" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3.50"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="8dp"
                                android:text="Sub Total"
                                android:textStyle="bold" />

                            <EditText
                                android:id="@+id/editText_sub_total"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:layout_marginLeft="10dp"
                                android:background="@drawable/rounded_rectangle_gray"
                                android:inputType="numberDecimal"
                                app:layout_gravity="center_vertical" />
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="6dp"
                        android:background="@drawable/drop_shadow"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="5dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="6">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.25"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="8dp"
                                android:text="@string/disc"
                                android:textStyle="bold" />

                            <EditText
                                android:id="@+id/editText_disc1"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:layout_marginLeft="10dp"
                                android:background="@drawable/rounded_rectangle_gray"
                                android:inputType="numberDecimal"
                                app:layout_gravity="center_vertical" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2.25"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="8dp"
                                android:text="Disc. Amount"
                                android:textStyle="bold" />

                            <EditText
                                android:id="@+id/editText_disc_amount"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:layout_marginLeft="10dp"
                                android:background="@drawable/rounded_rectangle_gray"
                                android:inputType="numberDecimal"
                                app:layout_gravity="center_vertical" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2.25"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="8dp"
                                android:text="Unit Price"
                                android:textStyle="bold" />

                            <EditText
                                android:id="@+id/editText_unit_price"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:layout_marginLeft="10dp"
                                android:background="@drawable/rounded_rectangle_gray"
                                android:inputType="numberDecimal"
                                app:layout_gravity="center_vertical" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:weightSum="6">

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="12dp"
                            android:src="@drawable/ic_border_color_black_24dp"
                            app:layout_gravity="center" />

                        <EditText
                            android:id="@+id/editText_note_item"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="5"
                            android:background="@drawable/rounded_rectangle_gray"
                            android:hint="@string/note"
                            android:imeOptions="actionNext"
                            android:inputType="text"
                            android:textColorHint="@color/colorGray" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_rectangle_new"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_margin="5dp"
                        android:weightSum="6">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1.5"
                            android:gravity="center_vertical"
                            android:text="Bruto"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/editText_bruto"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="4.5"
                            android:gravity="left|center"
                            android:hint="@string/bruto"
                            android:imeOptions="actionNext"
                            android:inputType="number"
                            android:textColorHint="@color/colorGray" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_margin="5dp"
                        android:weightSum="6">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1.5"
                            android:gravity="left|center"
                            android:text="Disc.(%)"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/editText_disc2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="20dp"
                            android:layout_weight="1.5"
                            android:hint="@string/discount"
                            android:imeOptions="actionNext"
                            android:inputType="number"
                            android:textColorHint="@color/colorGray"
                            app:layout_gravity="center_vertical" />

                        <EditText
                            android:id="@+id/editText_disc_value"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:hint="@string/discount"
                            android:imeOptions="actionNext"
                            android:inputType="number"
                            android:textColorHint="@color/colorGray"
                            app:layout_gravity="center_vertical" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_margin="5dp"
                        android:weightSum="6">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1.5"
                            android:gravity="left|center"
                            android:text="PPN"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/editText_ppn"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="20dp"
                            android:layout_weight="1.5"
                            android:hint="@string/discount"
                            android:imeOptions="actionNext"
                            android:inputType="number"
                            android:textColorHint="@color/colorGray"
                            app:layout_gravity="center_vertical" />

                        <EditText
                            android:id="@+id/editText_ppn_value"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:hint="@string/discount"
                            android:imeOptions="actionNext"
                            android:inputType="number"
                            android:textColorHint="@color/colorGray"
                            app:layout_gravity="center_vertical" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_margin="5dp"
                        android:weightSum="6">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1.5"
                            android:gravity="left|center"
                            android:text="PPH"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/editText_pph"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="20dp"
                            android:layout_weight="1.5"
                            android:hint="@string/discount"
                            android:imeOptions="actionNext"
                            android:inputType="number"
                            android:textColorHint="@color/colorGray"
                            app:layout_gravity="center_vertical" />

                        <EditText
                            android:id="@+id/editText_pph_value"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:hint="@string/discount"
                            android:imeOptions="actionNext"
                            android:inputType="number"
                            android:textColorHint="@color/colorGray"
                            app:layout_gravity="center_vertical" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_margin="5dp"
                        android:weightSum="6">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1.5"
                            android:gravity="left|center"
                            android:text="PPH"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/editText_pbbkb"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="20dp"
                            android:layout_weight="1.5"
                            android:hint="@string/discount"
                            android:imeOptions="actionNext"
                            android:inputType="number"
                            android:textColorHint="@color/colorGray"
                            app:layout_gravity="center_vertical" />

                        <EditText
                            android:id="@+id/editText_pbbkb_value"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:hint="@string/discount"
                            android:imeOptions="actionNext"
                            android:inputType="number"
                            android:textColorHint="@color/colorGray"
                            app:layout_gravity="center_vertical" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_margin="5dp"
                        android:weightSum="6">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1.5"
                            android:gravity="left|center"
                            android:text="Other Cost:"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/editText_other_cost"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="4.5"
                            android:hint="@string/other_cost"
                            android:imeOptions="actionNext"
                            android:inputType="number"
                            android:textColorHint="@color/colorGray"
                            app:layout_gravity="center_vertical" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_margin="5dp"
                        android:weightSum="6">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1.5"
                            android:gravity="left|center"
                            android:text="Netto:"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/editText_netto"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="4.5"
                            android:hint="@string/netto"
                            android:imeOptions="actionNext"
                            android:inputType="number"
                            android:textColorHint="@color/colorGray"
                            app:layout_gravity="center_vertical" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:weightSum="6">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.5"
                        android:gravity="left|center"
                        android:text="Terbilang:"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView_terbilang"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="4.5"
                        android:gravity="left|center"
                        android:text="Terbilang..." />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:weightSum="6">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.5"
                        android:gravity="left|center"
                        android:text="Note:"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/editText_note"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="4.5"
                        android:background="@drawable/rounded_rectangle_new"
                        android:hint="@string/notes"
                        android:imeOptions="actionNext"
                        android:inputType="textCapWords|textPostalAddress"
                        android:textColorHint="@color/colorGray"
                        app:layout_gravity="center_vertical" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_layout_button_action_form"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="center_horizontal"
                android:weightSum="3">

                <LinearLayout
                    android:id="@+id/linear_layout_button_cancel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_rectangle_brown"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/textView_button_cancel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:text="Cancel" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear_layout_button_save_as_draft"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_rectangle_brown"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/textView_button_save_as_draft"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:text="Save As Draft" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear_layout_button_process"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_rectangle_brown"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/textView_button_process"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:text="Send" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</RelativeLayout>
