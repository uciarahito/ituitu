<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="vertical"
    android:background="@drawable/rounded_rectangle_new">

    <LinearLayout
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="New Item Quotation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="@string/qty"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/editText_quantity"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/rounded_rectangle_gray"
                    android:inputType="numberDecimal"
                    app:layout_gravity="center_vertical"
                    android:textSize="@dimen/textView_transaction"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="@string/unit"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/spinner_unit"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:spinnerMode="dialog"
                    app:layout_gravity="center_vertical" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="@string/item"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/spinner_item"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:spinnerMode="dialog"
                    app:layout_gravity="center_vertical" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:background="@drawable/drop_shadow"
            android:layout_marginTop="5dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="6">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.35"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="@string/disc"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/editText_disc1"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/rounded_rectangle_gray"
                    android:inputType="numberDecimal"
                    app:layout_gravity="center_vertical"
                    android:textSize="@dimen/textView_transaction"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2.25"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="Disc. Amount"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/editText_disc_amount"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/rounded_rectangle_gray"
                    android:inputType="numberDecimal"
                    app:layout_gravity="center_vertical"
                    android:textSize="@dimen/textView_transaction"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2.25"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="Unit Price"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/editText_unit_price"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/rounded_rectangle_gray"
                    android:inputType="numberDecimal"
                    app:layout_gravity="center_vertical"
                    android:textSize="@dimen/textView_transaction"/>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:background="@drawable/drop_shadow"
            android:layout_marginTop="5dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="6">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2.5"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="Send Date"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/editText_send_date"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/rounded_rectangle_gray"
                    android:inputType="numberDecimal"
                    app:layout_gravity="center_vertical"
                    android:textSize="@dimen/textView_transaction"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3.35"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="Sub Total"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/editText_sub_total"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/rounded_rectangle_gray"
                    android:inputType="numberDecimal"
                    app:layout_gravity="center_vertical"
                    android:textSize="@dimen/textView_transaction"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <Button
                android:layout_marginRight="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/Green"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:id="@+id/button_cancel"
                android:textAllCaps="false"
                android:text="Cancel"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <Button
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/Green"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:id="@+id/button_save"
                android:textAllCaps="false"
                android:layout_weight="1"
                android:text="Save"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>