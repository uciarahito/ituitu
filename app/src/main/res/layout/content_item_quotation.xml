<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorBackground"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_item_quotation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/keyline_xs"
            android:text="Add Item"
            android:textAppearance="@style/TextAppearance.AppTheme.Large"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="7">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="12dp"
                android:src="@drawable/ic_gas_24dp" />

            <Spinner
                android:id="@+id/spinner_item"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="6"
                android:background="@drawable/rounded_rectangle_gray"
                app:layout_gravity="center_vertical"
                tools:listitem="@android:layout/simple_spinner_dropdown_item" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="7">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="12dp"
                android:src="@drawable/ic_list_24dp" />

            <Spinner
                android:id="@+id/spinner_unit"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="6"
                android:background="@drawable/rounded_rectangle_gray"
                app:layout_gravity="center_vertical"
                tools:listitem="@android:layout/simple_spinner_dropdown_item" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="7">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="12dp"
                android:src="@drawable/ic_quantity_24dp" />

            <EditText
                android:id="@+id/editText_quantity"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:background="@drawable/rounded_rectangle_gray"
                android:hint="@string/quantity"
                android:inputType="number"
                android:textColorHint="@color/colorGray"
                app:layout_gravity="center_vertical" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="7">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="12dp"
                android:src="@drawable/ic_price_24dp" />

            <EditText
                android:id="@+id/editText_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:background="@drawable/rounded_rectangle_gray"
                android:hint="@string/price"
                android:inputType="number"
                android:textColorHint="@color/colorGray"
                app:layout_gravity="center_vertical" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="7">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="12dp"
                android:src="@drawable/ic_discount_24dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_weight="6"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/editText_discount"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_rectangle_gray"
                    android:hint="@string/discount"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:textColorHint="@color/colorGray" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/keyline_xs"
                    android:text="%"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/editText_disc_amount"
                    android:layout_width="158dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_rectangle_gray"
                    android:hint="@string/disc_amount"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:textColorHint="@color/colorGray" />
            </LinearLayout>

            <!--<EditText-->
            <!--android:id="@+id/editText_discount"-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_weight="6"-->
            <!--android:textColorHint="@color/colorGray"-->
            <!--android:background="@drawable/rounded_rectangle_gray"-->
            <!--android:hint="@string/discount"-->
            <!--android:inputType="number"-->
            <!--app:layout_gravity="center_vertical" />-->
        </LinearLayout>

        <!--<LinearLayout-->
